<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerText"
        android:text="Kayıt Ol"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <EditText
        android:layout_below="@+id/registerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail Adresiniz"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#40ffffff"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:id="@+id/mailRegister"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:drawablePadding="15dp"
        />
    <EditText
        android:layout_below="@id/mailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adınız"
        android:inputType="textEmailAddress"
        android:id="@+id/username"
        android:background="#40ffffff"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        />
    <EditText
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifreniz"
        android:background="#40ffffff"
        android:inputType="textPassword"
        android:id="@+id/passwordRegister"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="15dp"

        />
    <EditText
        android:layout_below="@+id/passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifrenizi Tekrar Girin"
        android:background="#40ffffff"
        android:inputType="textPassword"
        android:id="@+id/passwordRegisterConfirm"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="15dp"
        />

    <Button
        android:id="@+id/registerButton"
        android:layout_below="@+id/passwordRegisterConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="kayıt ol"
        android:onClick="kayitOl"/>

    <TextView
        android:id="@+id/alreadyMemberButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerButton"
        android:clickable="true"
        android:onClick="alreadyMemberButton"
        android:text="Zaten Üye Misiniz?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>